<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="4"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/my_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textAlignment="viewStart"
            android:fontFamily="sans-serif-medium"
            android:text="Score:"
            android:textColor="#000000"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/timer_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="0s"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/question_mark1"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/question_mark2"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/question_mark3"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/question_mark4"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/question_mark5"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/question_mark6"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/question_mark7"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/question_mark8"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/question_mark9"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/question_mark10"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/question_mark11"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/question_mark12"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Reset_btn"
            android:text="Reset"
            android:textSize="30dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-condensed-medium"/>
    </LinearLayout>

</LinearLayout>